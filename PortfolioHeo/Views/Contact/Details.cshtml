@model PortfolioHeo.Models.Contact

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LandingLayout.cshtml";
}


<div class="col-lg col-md ml-auto mr-auto">
    <div class="card card-login">
        <div class="section section-contacts" style="padding: 40px 0;">
            <div class="row">
                <div class="col-md-11 ml-auto mr-auto">
                    <h3 class="text-center" style="font-weight: bold; color: black; margin-top: 0px">Manage</h3>
                    <dl class="row">
                        <dt class="col-sm-2">
                            성함
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Name)
                        </dd>
                        <dt class="col-sm-2">
                            이메일
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Email)
                        </dd>
                        <dt class="col-sm-2">
                            내용
                        </dt>
                        <dd class="col-sm-10">
                            @Html.Raw(Model.Contents)
                        </dd>
                        <dt class="col-sm-2">
                            작성일
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.RegDate)
                        </dd>
                    </dl>
                </div>
                <div>
                    <a asp-action="Delete" asp-route-id="@Model.Id">삭제</a> |
                    <a asp-action="Index">리스트</a>
                </div>
            </div>
        </div>
    </div>
</div>
