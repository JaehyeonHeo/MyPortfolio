@model IEnumerable<PortfolioHeo.Models.Contact>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}


<div class="col-lg col-md ml-auto mr-auto">
    <div class="card card-login">
        <div class="card-header card-header-primary text-center">
            <h4 class="card-title" style="margin-top:0px;">Mail Box</h4>
            <div class="social-line"></div>
        </div>
        <div class="section section-contacts">
            <div class="row">
                <div class="col-md-11 ml-auto mr-auto">
                    
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Email)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.Contents)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.RegDate)
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                
                                <td>
                                    <a asp-action="Details" asp-route-id="@item.Id">
                                        @Html.DisplayFor(modelItem => item.Contents)
                                    </a>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.RegDate)
                                </td>

                                <td>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                    Delete</a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

